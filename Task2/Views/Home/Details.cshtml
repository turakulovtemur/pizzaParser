@model Pizza
<div class="flex">
   
        <div class="flex-item">
            <div hidden>@Model.Id</div>
            <div class="product_img"><img class="img_photo" src="@Model.Photo" /></div>
            <div class="product_name">
                @Model.Name
            </div>
            <div class="product-text">
                @Model.Desc
            </div>
            <div class="pizza-size">
                <div class="product-item">@Model.Size1</div>

                <div class="product-item active">@Model.Size2</div>
                <div class="product-item">@Model.Size3</div>
            </div>
            <div class="product_price_btn">
                <div class="product_price">
                    @Model.Price
                    <span>&#8381</span>
                </div>
                <div class="product_weight">@Model.Weight</div>
                <div class="product_half">1/2</div>
                <div class="product_btn">В корзину</div>
            </div>
        </div>
    
</div>
